#include <stdio.h>

int main(){
    int i,j;
    int r,c;
    
    printf("Enter the number of rows in the matrix: \n");
    scanf("%d",&r);
    
    printf("Enter the number of columns in the matrix: \n");
    scanf("%d",&c);
    
    int arr[r][c];
    
    for(i = 0;i < r;i++){
        for(j = 0;j < c;j++){
            printf("Enter the Element[%d][%d]: ",i + 1,j + 1);
            scanf("%d",&arr[i][j]);
        }
    }
    
    for(i = 0;i < r;i++){
        for(j = 0;j < c;j++){
            if(i != j){
                arr[i][j] = 0;
            }
        }
    }
    
    
    printf("\nUPDATED MATRIX\n");
    for(i = 0;i < r;i++){
        for(j = 0;j < c;j++){
            printf("%d ",arr[i][j]);
        }
        printf("\n");
    }
    
    
}
